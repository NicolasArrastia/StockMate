{
  "name": "stockmate",
  "version": "1.0.0",
  "main": "main.js",
  "build": {
    "appId": "com.inventory.manager",
    "files": [
      "backend",
      "frontend/build",
      "main.js"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "concurrently \"npm run server\" \"npm run client\" \"npm run electron\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm run dev",
    "electron": "wait-on http://localhost:3000 && electron .",
    "dist": "npm run build --prefix frontend && electron-builder"
  },
  "keywords": [],
  "author": "Nicolas",
  "license": "ISC",
  "description": "StockMate is an inventory manager app for desktop use",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "mongoose": "^8.7.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "wait-on": "^8.0.1"
  }
}
